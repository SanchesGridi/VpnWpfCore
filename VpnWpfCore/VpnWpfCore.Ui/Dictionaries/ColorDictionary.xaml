<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="MW_WindowBackground" x:Shared="False" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Black"/>
        <GradientStop Color="White" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MW_MenuBackground" x:Shared="False" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="DarkGray"/>
        <GradientStop Color="Black" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MW_ConnectButtonBackground" x:Shared="False" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="DarkGray"/>
        <GradientStop Color="DarkSlateGray" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>